@model EventListViewModel

@{
    ViewBag.Title = "All Created Events"; 
    Layout = "_UserLayout";
}
<table class="table table-striped table-bordered table-condensed">
    <tr> 
        <th class="text-center">Date</th> 
        <th class="text-center">Name</th> 
        <th class="text-center">Price</th> 
        <th class="text-center">Location</th>
        <th class="text-center">Actions</th> 
    </tr>
    @foreach (var item in Model.CreatedEvents) {
        <tr>
            <td class="text-center">@item.Date.ToString("dd MMM yyyy")</td>
            <td class="text-center">@item.Title</td>
            <td class="text-center">@item.Price.ToString("c")</td>
            <td class="text-center">@item.Location</td>
            <td class="text-center"> 
                <form asp-action="Delete" method="post"> 
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-Id="@item.ID"> Edit </a> 
                    <input type="hidden" name="ID" value="@item.ID" /> 
                    <button type="submit" class="btn btn-danger btn-sm"> Delete </button> 
                </form>
            </td>
        </tr>
    }
</table> 
<div class="text-center">
<a asp-action="Create" class="btn btn-primary">Creat Event</a> </div>